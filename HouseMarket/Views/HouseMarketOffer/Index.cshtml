@model HouseMarket.Models.HouseMarketOffer.BrokersModel
@{
    ViewData["Title"] = "House Market Offer Page";
}

<div class="text-center">
    <h1 class="display-5">House Market</h1>
    <h4 class="display-6">Top 10 brokers Amsterdam</h4>
</div>


<table class="table">
    <thead>
    <tr>
        <th>Broker Id</th>
        <th>Broker Name</th>
        <th>Number of Houses</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var broker in @Model.Top10Brokers)
    {
        <tr>
            <td>@broker.Id</td>
            <td>@broker.Name</td>
            <td>@broker.NumberOfHouses</td>
        </tr>
    }
    </tbody>
</table>


<div class="text-center">
    <h4 class="display-6">Top 10 brokers Amsterdam(house with garden)</h4>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Broker Id</th>
            <th>Broker Name</th>
            <th>Number of Houses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var broker in @Model.Top10BrokersHousesWithGarden)
        {
            <tr>
                <td>@broker.Id</td>
                <td>@broker.Name</td>
                <td>@broker.NumberOfHouses</td>
            </tr>
        }
    </tbody>
</table>